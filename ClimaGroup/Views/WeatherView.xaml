<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localnamespace="clr-namespace:ActividadClaseMAUI.ViewModels"
             x:Class="ActividadClaseMAUI.Views.WeatherView"
             Title="WeatherView">

    <ContentPage.BindingContext>
        <localnamespace:WeatherViewModel />
    </ContentPage.BindingContext>
        <local:WeatherViewModel />
        <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
    <Label 
    x:Name="LabelTemperatura"
    Text="{Binding WeatherDataInfo.Current.Temperature_2m}"
    />
    <Label 
    x:Name="LaberRain"
    Text="{Binding WeatherDataInfo.Current.Temperature_2m}"
    />
 
</ContentPage>